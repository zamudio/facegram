<h1> Welcome, <%= @user.username %>!</h1>

<% if (@posts.length == 0) %>
    <p>You have no posts! <%# button_to 'Create a Post', new_post_path, :method => :get %></p>
<% else %>
    <% @posts.each do |post| %>
        <p><%= link_to post.caption, post_path(post) %></p>
    <% end %>
<% end %>

<br><br>
<%= button_to 'Create a Post', new_post_path(@post), :method => :get %>
<%= button_to 'Edit Profile', edit_user_path(@user.id), :method => :get %>
<%= button_to "Log Out", logout_path, :method => :get %>